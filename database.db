import sqlite3

connection = sqlite3.connect("database.db")

with connection:
    connection.execute("""
        CREATE TABLE IF NOT EXISTS users (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            username TEXT UNIQUE NOT NULL,
            password TEXT NOT NULL
        );
    """)

    connection.execute("""
        CREATE TABLE IF NOT EXISTS courses (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            title TEXT NOT NULL,
            description TEXT NOT NULL,
            image TEXT
        );
    """)

    connection.executemany("""
        INSERT INTO courses (title, description, image) VALUES (?, ?, ?);
    """, [
        ("Python Basics", "Learn the basics of Python programming.", "/static/images/course_images/python_basics.png"),
        ("Web Development", "A complete guide to web development.", "/static/images/course_images/web_development.png"),
        ("Data Science", "Learn data analysis and visualization.", "/static/images/course_images/data_science.png"),
        ("Machine Learning", "Dive into machine learning concepts.", "/static/images/course_images/machine_learning.png"),
    ])

print("Database initialized successfully!")
connection.close()
